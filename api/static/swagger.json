  "paths": {
    "/product/get_all": {
      "get": {
        "tags": ["Products"],
        "summary": "Returns a list of products",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "description": "Resquest status",
                      "type": "String"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "$ref": "#/components/schemas/product"
                      }
                    }
                  },
                  "example": {
                    "status": "success",
                    "data": {
                      "id": 1,
                      "name": "Product 1",
                      "description": "Just an example of a descritption."
                    }
                  }
                }
              }
            }
          },
          "4XX": {
            "description": "Bad request syntax or unsupported method.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "description": "Resquest status",
                      "type": "boolean"
                    },
                    "data": {
                      "type": "string",
                      "description": "Error description"
                    }
                  }
                },
                "example": {
                  "status": "error",
                  "error": "Error description"
                }
              }
            }
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/product/get/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID of the product",
          "type": "integer"
        }
      ],
      "get": {
        "tags": ["Products"],
        "summary": "Return a product",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "description": "Resquest status",
                      "type": "string"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/product"
                      }
                    }
                  },
                  "example": {
                    "status": "success",
                    "data": [
                      {
                        "id": 1,
                        "name": "Product 1",
                        "description": "Just an example of a descritption."
                      }
                    ]
                  }
                }
              }
